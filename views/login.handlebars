<main class="form-signin">
  <form id="login-form">
    <h1 class="h3">Login</h1>

    <div class="form-floating">
      <input type="text" class="form-control" id="username-login" placeholder="Username" autofocus="true">
      <label for="username-login">Username</label>
    </div>
    <div class="form-floating">
      <input type="password" class="form-control" id="password-login" placeholder="Password" autofocus="true">
      <label for="password-login">Password</label>
    </div>

    <button class="btn" type="submit">Sign in</button>
    <a class="login-link" href="/signup">Sign up instead</a>
  </form>
</main>

<script src="/js/login.js"></script>