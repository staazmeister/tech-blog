<main class="form-signin text-center">
    <h3 class="h3">New Post</h3>
    <form class="card-body" id="add-post-form">
        <div class="form-floating">
            <label for="post-title" class="form-label" ></label>
            <input type="text" id="post-title" name="post-title" class="form-input" autofocus="true" placeholder="Title"/>
        </div>

        <div class="form-floating">
            <label class="form-label" for="content" ></label>
            <textarea id="content" name="content" class="form-input " aria-label="With textarea"
                autofocus="true" placeholder="What's on your mind?"></textarea>
        </div>

        <button type="submit" class="btn">Create</button>
    </form>
    </form>
</main>

<script src="/js/add-post.js"></script>