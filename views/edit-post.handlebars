<div class="card">
    <h3 class="card-header">Edit Post</h3>
    <form class="card-body edit-post-form" id="edit-post-form">
        <div class="form-floating">
        <label for="post-title" class="form-label">Title</label>
        <input name="post-title" type="text" placeholder="{{post.title}}" class="form-input" />
        </div>

        <div class="form-floating">
        <label class="form-label" for="content">Content</label>
        <textarea name="content" type="text" placeholder="{{post.content}}" class="form-input" style="height: 100px"/></textarea>
        </div>

        <button type="submit" class="btn">Update Post</button>
        <button type="button" class="delete-post-btn ">Delete Post</button>
    </form>
</div>


<script src="/js/edit-post.js"></script>
<script src="/js/delete-post.js"></script>