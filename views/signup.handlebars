 <main class="form-signin">
  <form id="signup-form">
    <h1 class="h3">Sign up today!</h1>

    <div class="form-floating">
      <input type="text" class="form-control" id="username-signup" placeholder="Username" autofocus="true">
      <label for="username-signup">Username</label>
    </div>
    <div class="form-floating">
      <input type="password" class="form-control" id="password-signup" placeholder="Password" autofocus="true">
      <label for="password-signup">Password</label>
    </div>

    <button class="btn" type="submit">Sign up</button>
    <a class="login-link" href="/login">Log in instead</a>
  </form>
</main>

<script src="/js/signup.js"></script>